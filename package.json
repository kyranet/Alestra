{
	"name": "alestra",
	"version": "4.0.0",
	"description": "Canvas-Constructor helper bot and Soft-Sandbox Evaluator",
	"main": "dist/Alestra.js",
	"scripts": {
		"docker:build": "yarn build && docker build -t skyrabot/alestra .",
		"docker:run": "docker run --rm -d -it --name alestra skyrabot/alestra",
		"docker:logs": "docker logs alestra -f",
		"docker:restart": "docker container rm -f alestra && yarn docker:run",
		"docker:stop": "docker container stop alestra",
		"docker:dev": "yarn docker:build && yarn docker:run && yarn docker:logs",
		"start": "node dist/Alestra.js",
		"lint": "eslint --ext ts src --fix",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"dev": "yarn build && yarn start"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/alestra.git"
	},
	"keywords": [
		"canvas-constructor",
		"canvas",
		"helper",
		"sapphire"
	],
	"private": true,
	"author": "Antonio Rom√°n <kyradiscord@gmail.com>",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/skyra-project/alestra/issues"
	},
	"dependencies": {
		"@klasa/stopwatch": "^0.0.1",
		"@sapphire/decorators": "^1.0.1",
		"@sapphire/framework": "github:sapphire-project/framework#build",
		"@sapphire/utilities": "^1.0.0",
		"acorn": "^8.0.1",
		"canvas": "^2.6.1",
		"canvas-constructor": "^4.1.0",
		"colorette": "^1.2.1",
		"discord.js": "^12.4.1",
		"module-alias": "^2.2.2",
		"node-fetch": "^2.6.1",
		"reflect-metadata": "^0.1.13",
		"ws": "^7.3.1",
		"zlib-sync": "^0.1.7"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@skyra/eslint-config": "^5.3.3",
		"@types/eslint": "^7.2.1",
		"@types/node": "^14.10.0",
		"@types/node-fetch": "^2.5.7",
		"@types/ws": "^7.2.6",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.7.0",
		"eslint": "^7.8.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.3.0",
		"lint-staged": "^10.3.0",
		"prettier": "^2.1.1",
		"pretty-quick": "^3.0.1",
		"typescript": "^4.0.2"
	},
	"_moduleAliases": {
		"@utils": "dist/lib/util",
		"@lib": "dist/lib",
		"@root": "dist"
	},
	"resolutions": {
		"chalk": "^4.1.0",
		"kind-of": "^6.0.3",
		"lodash": "^4.17.20",
		"minimist": "^1.2.2"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
